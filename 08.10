namespace CollectionsAndClasses
{
    internal class Person
    {
        public string Name { get; set; }
        public int Age { get; set; }


        public void GetAge(int age)
        {
            if (age < 0)

            {
                Age = 0;
            }
            else if (age > 120)
            {
                Age = 120;
            }
            else
            {
                Age = age;
            }
        }
    
        private static List<Person> GetInfo()
        {
            return new List<Person>
            {
                new Person
                {
                    Name = "Daviti",
                    Age = 70
                },

                new Person
                {
                    Name = "Gia",
                    Age = 80
                },
            };

        }

        public string DisplayInfo()
        {
            if (Name != null)

            { return $" Name : {Name}, Age : {(GetAge)} "; }

            else { return " enter both name and age "; }
        }
    }
}
